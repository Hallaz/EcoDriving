<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pertamina.tbbm.rewulu.ecodriving.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/action_bar"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >
        </LinearLayout>

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/btn_slide_start"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_action_next_item"
                android:visibility="visible" />
            
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/slide_judul_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:text="@string/hello_world" />

    <ImageView
        android:id="@+id/slide_context_imgview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/slide_judul_text"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/slide_judul_text"
        android:src="@drawable/ic_eco" />

</RelativeLayout>